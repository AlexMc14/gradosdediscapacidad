---
import BaseLayout from './BaseLayout.astro';
import Header from '@components/layout/Header.astro';
import Footer from '@components/layout/Footer.astro';
import Button from '@components/ui/Button.astro';
import { generateLocalBusinessSchema, generateBreadcrumbSchema } from '@lib/schema-generators';

interface Props {
  title: string;
  description: string;
  provincia: {
    nombre: string;
    slug: string;
    capital: string;
    comunidad: string;
    poblacion?: number;
  };
}

const { title, description, provincia } = Astro.props;

const canonical = `https://gradosdediscapacidad.es/provincias/${provincia.slug}`;

// Schema LocalBusiness
const localBusinessSchema = generateLocalBusinessSchema({
  name: `Peritaje Médico Discapacidad ${provincia.nombre}`,
  region: provincia.nombre,
  description: `Servicio especializado de peritaje médico y valoración de discapacidad en ${provincia.nombre}. Expertos locales en ${provincia.capital}.`,
  url: canonical,
});

// Breadcrumbs
const breadcrumbSchema = generateBreadcrumbSchema([
  { name: 'Inicio', url: 'https://gradosdediscapacidad.es' },
  { name: 'Provincias', url: 'https://gradosdediscapacidad.es/provincias' },
  { name: provincia.nombre, url: canonical },
]);
---

<BaseLayout
  title={title}
  description={description}
  canonical={canonical}
  schema={[localBusinessSchema, breadcrumbSchema]}
>
  <Header />

  <main>
    <!-- Breadcrumbs -->
    <nav class="breadcrumbs" aria-label="Breadcrumb">
      <div class="container">
        <ol>
          <li><a href="/">Inicio</a></li>
          <li><a href="/provincias">Provincias</a></li>
          <li aria-current="page">{provincia.nombre}</li>
        </ol>
      </div>
    </nav>

    <!-- Hero Provincial -->
    <section class="hero-provincial">
      <div class="container">
        <div class="hero-content">
          <h1>Peritaje Médico en {provincia.nombre}</h1>
          <p class="hero-subtitle">
            Expertos en valoración de grado de discapacidad en {provincia.capital} y toda la provincia de {provincia.nombre}
          </p>
          <div class="hero-badges">
            <span class="badge">✓ Atención Personalizada</span>
            <span class="badge">✓ Primera Consulta Gratuita</span>
            <span class="badge">✓ Presencial u Online</span>
          </div>
          <div class="hero-cta">
            <Button href="/contacto" variant="primary" size="lg">
              Solicitar Presupuesto en {provincia.nombre}
            </Button>
          </div>
        </div>
      </div>
    </section>

    <!-- Contenido Principal -->
    <article class="provincia-content">
      <div class="container">
        <div class="content-grid">
          <!-- Contenido principal -->
          <div class="main-content prose">
            <slot />
          </div>

          <!-- Sidebar -->
          <aside class="sidebar">
            <div class="sidebar-card">
              <h3>Contacto en {provincia.nombre}</h3>
              <div class="contact-info">
                <p><strong>Horario de Atención:</strong></p>
                <p>Lunes a Viernes<br />9:00 - 20:00</p>
                <p class="mt-4"><strong>Cobertura:</strong></p>
                <p>{provincia.capital} y toda la provincia</p>
              </div>
              <Button href="/contacto" variant="primary" class="w-full mt-4">
                Solicitar Presupuesto
              </Button>
            </div>

            <div class="sidebar-card">
              <h3>Servicios en {provincia.nombre}</h3>
              <ul class="services-list">
                <li><a href="/servicios/peritaje-medico">Peritaje Médico</a></li>
                <li><a href="/servicios/valoracion-discapacidad">Valoración de Discapacidad</a></li>
                <li><a href="/servicios/revision-grado">Revisión de Grado</a></li>
                <li><a href="/servicios/recursos-reclamaciones">Recursos y Reclamaciones</a></li>
              </ul>
            </div>
          </aside>
        </div>
      </div>
    </article>

    <!-- CTA Final -->
    <section class="cta-provincial">
      <div class="container">
        <h2>¿Necesitas Ayuda en {provincia.nombre}?</h2>
        <p>Nuestro equipo de expertos está disponible para atenderte</p>
        <Button href="/contacto" variant="primary" size="lg">
          Solicitar Consulta Gratuita
        </Button>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  /* Breadcrumbs */
  .breadcrumbs {
    background-color: var(--light-gray);
    padding: var(--space-4) 0;
    font-size: var(--text-sm);
  }

  .breadcrumbs ol {
    display: flex;
    list-style: none;
    gap: var(--space-2);
    margin: 0;
    padding: 0;
  }

  .breadcrumbs li:not(:last-child)::after {
    content: '›';
    margin-left: var(--space-2);
    color: var(--medium-gray);
  }

  .breadcrumbs a {
    color: var(--primary-green);
    text-decoration: none;
  }

  .breadcrumbs a:hover {
    text-decoration: underline;
  }

  /* Hero Provincial */
  .hero-provincial {
    background: linear-gradient(135deg, var(--light-blue) 0%, var(--white) 100%);
    padding: var(--space-16) 0;
  }

  .hero-content {
    max-width: 800px;
  }

  .hero-provincial h1 {
    font-size: var(--text-4xl);
    color: var(--primary-blue);
    margin-bottom: var(--space-4);
  }

  @media (min-width: 768px) {
    .hero-provincial h1 {
      font-size: var(--text-5xl);
    }
  }

  .hero-subtitle {
    font-size: var(--text-lg);
    color: var(--medium-gray);
    margin-bottom: var(--space-6);
  }

  .hero-badges {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-3);
    margin-bottom: var(--space-8);
  }

  .badge {
    display: inline-block;
    background-color: var(--light-green);
    color: var(--primary-green);
    padding: var(--space-2) var(--space-4);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
  }

  /* Content Grid */
  .provincia-content {
    padding: var(--space-16) 0;
  }

  .content-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-10);
  }

  @media (min-width: 1024px) {
    .content-grid {
      grid-template-columns: 2fr 1fr;
    }
  }

  /* Sidebar */
  .sidebar-card {
    background: var(--white);
    border: 1px solid var(--border-gray);
    border-radius: var(--radius-lg);
    padding: var(--space-6);
    margin-bottom: var(--space-6);
  }

  .sidebar-card h3 {
    font-size: var(--text-xl);
    color: var(--primary-blue);
    margin-bottom: var(--space-4);
  }

  .contact-info p {
    margin-bottom: var(--space-2);
  }

  .services-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .services-list li {
    margin-bottom: var(--space-3);
  }

  .services-list a {
    color: var(--primary-green);
    text-decoration: none;
    font-weight: var(--font-medium);
  }

  .services-list a:hover {
    text-decoration: underline;
  }

  /* CTA Provincial */
  .cta-provincial {
    background: linear-gradient(135deg, var(--primary-blue) 0%, var(--primary-green) 100%);
    color: var(--white);
    padding: var(--space-16) 0;
    text-align: center;
  }

  .cta-provincial h2 {
    color: var(--white);
    font-size: var(--text-3xl);
    margin-bottom: var(--space-4);
  }

  .cta-provincial p {
    font-size: var(--text-lg);
    margin-bottom: var(--space-8);
  }

  /* Utility */
  .w-full {
    width: 100%;
  }

  .mt-4 {
    margin-top: var(--space-4);
  }
</style>
