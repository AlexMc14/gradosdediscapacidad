---
import Button from '@components/ui/Button.astro';
import { withBase } from '@lib/utils';

const logoUrl = withBase('/logo.svg');
const homeUrl = withBase('/');
const serviciosUrl = withBase('/servicios');
const provinciasUrl = withBase('/provincias');
const blogUrl = withBase('/blog');
const sobreNosotrosUrl = withBase('/sobre-nosotros');
const contactoUrl = withBase('/contacto');
---

<header class="header">
  <div class="container">
    <div class="header-content">
      <!-- Logo -->
      <a href={homeUrl} class="logo-link">
        <img src={logoUrl} alt="Grados de Discapacidad" width="200" height="60" class="logo" />
      </a>

      <!-- Navigation Desktop -->
      <nav class="nav-desktop">
        <ul class="nav-list">
          <li><a href={serviciosUrl}>Servicios</a></li>
          <li><a href={provinciasUrl}>Provincias</a></li>
          <li><a href={blogUrl}>Blog</a></li>
          <li><a href={sobreNosotrosUrl}>Sobre Nosotros</a></li>
          <li><a href={contactoUrl}>Contacto</a></li>
        </ul>
      </nav>

      <!-- CTA Button -->
      <div class="header-cta">
        <Button href={contactoUrl} variant="primary" size="md">
          Solicitar Presupuesto
        </Button>
      </div>

      <!-- Mobile Menu Button -->
      <button class="mobile-menu-btn" aria-label="Abrir menú" id="mobile-menu-btn">
        <svg width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="3" y1="12" x2="21" y2="12"></line>
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <line x1="3" y1="18" x2="21" y2="18"></line>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div class="mobile-menu" id="mobile-menu">
    <nav class="mobile-nav">
      <ul class="mobile-nav-list">
        <li><a href={serviciosUrl}>Servicios</a></li>
        <li><a href={provinciasUrl}>Provincias</a></li>
        <li><a href={blogUrl}>Blog</a></li>
        <li><a href={sobreNosotrosUrl}>Sobre Nosotros</a></li>
        <li><a href={contactoUrl}>Contacto</a></li>
      </ul>
      <div class="mobile-cta">
        <Button href={contactoUrl} variant="primary" size="lg">
          Solicitar Presupuesto
        </Button>
      </div>
    </nav>
  </div>
</header>

<style>
  .header {
    background-color: var(--white);
    border-bottom: 1px solid var(--border-gray);
    position: sticky;
    top: 0;
    z-index: var(--z-sticky);
    box-shadow: var(--shadow-sm);
  }

  .header-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: var(--header-height);
    gap: var(--space-6);
  }

  .logo-link {
    display: flex;
    align-items: center;
  }

  .logo {
    height: 50px;
    width: auto;
  }

  /* Desktop Navigation */
  .nav-desktop {
    display: none;
  }

  @media (min-width: 1024px) {
    .nav-desktop {
      display: block;
      flex: 1;
    }
  }

  .nav-list {
    display: flex;
    list-style: none;
    gap: var(--space-6);
    margin: 0;
    padding: 0;
  }

  .nav-list a {
    color: var(--dark-gray);
    text-decoration: none;
    font-weight: var(--font-medium);
    transition: color var(--transition-fast);
  }

  .nav-list a:hover {
    color: var(--primary-green);
    text-decoration: none;
  }

  /* Header CTA */
  .header-cta {
    display: none;
  }

  @media (min-width: 1024px) {
    .header-cta {
      display: block;
    }
  }

  /* Mobile Menu Button */
  .mobile-menu-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-2);
    color: var(--dark-gray);
    cursor: pointer;
  }

  @media (min-width: 1024px) {
    .mobile-menu-btn {
      display: none;
    }
  }

  /* Mobile Menu */
  .mobile-menu {
    display: none;
    position: fixed;
    top: var(--header-height);
    left: 0;
    right: 0;
    bottom: 0;
    background-color: var(--white);
    z-index: var(--z-fixed);
    overflow-y: auto;
    box-shadow: var(--shadow-lg);
  }

  .mobile-menu.active {
    display: block;
  }

  .mobile-nav {
    padding: var(--space-6);
  }

  .mobile-nav-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .mobile-nav-list li {
    margin-bottom: var(--space-4);
  }

  .mobile-nav-list a {
    display: block;
    padding: var(--space-4);
    color: var(--dark-gray);
    text-decoration: none;
    font-weight: var(--font-medium);
    font-size: var(--text-lg);
    border-bottom: 1px solid var(--light-gray);
  }

  .mobile-nav-list a:hover {
    color: var(--primary-green);
    background-color: var(--light-green);
  }

  .mobile-cta {
    margin-top: var(--space-8);
  }

  @media (min-width: 1024px) {
    .mobile-menu {
      display: none !important;
    }
  }
</style>

<script>
  // Mobile menu toggle
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  if (mobileMenuBtn && mobileMenu) {
    mobileMenuBtn.addEventListener('click', () => {
      mobileMenu.classList.toggle('active');

      // Update aria-label
      const isActive = mobileMenu.classList.contains('active');
      mobileMenuBtn.setAttribute('aria-label', isActive ? 'Cerrar menú' : 'Abrir menú');
    });

    // Close menu when clicking on a link
    const mobileLinks = mobileMenu.querySelectorAll('a');
    mobileLinks.forEach(link => {
      link.addEventListener('click', () => {
        mobileMenu.classList.remove('active');
        mobileMenuBtn.setAttribute('aria-label', 'Abrir menú');
      });
    });
  }
</script>
